#!/bin/bash
# Use when you need to make nifti-style isoT1 from a subject's freesurfer output folder.
export FREESURFER_HOME=/usr/local/freesurfer_6/freesurfer
source $FREESURFER_HOME/SetUpFreeSurfer.sh

INPUT_DIR_start='/media/fsdb1_mnt/fs_snubh/4_FSRESULTS_V6_ALL'
OUTPUT_DIR='/media/fsdb1_mnt/fs_snubh/1_T1_isonii'

SUBJECT_FOLDERS=(10001240_150720 )

##########################################################################
for idx in ${!SUBJECT_FOLDERS[*]} 


	do
	subj=${SUBJECT_FOLDERS[$idx]}

	# 1. Go into subject FSfolder 
	cd $INPUT_DIR_start/"r"$subj/mri/orig

	# 2. Convert to isonii and put into fsdb1 1_T1_isonii folder.
	mri_convert -i 001.mgz -it mgz -ot nii -o $OUTPUT_DIR/"r"$subj"_T1".nii


done


